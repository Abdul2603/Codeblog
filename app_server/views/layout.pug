doctype html
html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/all.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')

  body
    nav.navbar.fixed-top.navbar-expand-md.navbar-light
      .container
        a.navbar-brand(href='/index') DevHub
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarMain')
          span.navbar-toggler-icon
        #navbarMain.navbar-collapse.collapse
          ul.navbar-nav.mr-auto
            li.nav-item
              a.nav-link(href='/Problems/') Problems
            li.nav-item
              a.nav-link(href='/features/') Features
            li.nav-item
              a.nav-link(href='/about/') About
          
          form.form-inline.my-2.my-lg-0
            div.input-group
              input.form-control.custom-search-input(type='text', placeholder='Search...')
              div.input-group-append
                button.btn.btn-outline-success(type='button', data-toggle='collapse', data-target='#searchCollapse') Search
            #searchCollapse.collapse
              ul.navbar-nav.mr-auto
                li.nav-item
                  a.nav-link(href='/AdvancedSearch/') Advanced Search

          ul.navbar-nav.ml-auto
            li.nav-item
              span.mx-2
              a.btn.btn-primary(href='/login') Login
              span.mx-2
            li.nav-item
              a.btn.btn-primary(href='/signup') Sign Up
            li.nav-item
              a.nav-link(href='/discussion/') Discussions

    .container.content
      block content

    footer
      .row
        .col-12
          small &copy; Made by Ayan - 2023

    script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js', integrity='sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49', crossorigin='anonymous')
    script(src='/javascripts/bootstrap.min.js')
    script(src='/javascripts/validation.js')
    block scripts
