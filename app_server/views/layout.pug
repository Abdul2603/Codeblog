doctype html
html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/all.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')

  body
    nav.navbar.fixed-top.navbar-expand-md.navbar-light
      .container
        a.navbar-brand(href='/') DevHub
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarMain')
          span.navbar-toggler-icon
        #navbarMain.navbar-collapse.collapse
          ul.navbar-nav.mr-auto
            li.nav-item
              a.nav-link(href='/Problems/') Problems
            li.nav-item
              a.nav-link(href='/features/') Features
            li.nav-item
              a.nav-link(href='/about/') About
            

          form.form-inline.my-2.my-lg-0(onsubmit='handleSearch(); return false;')
            div.input-group
              input.form-control.custom-search-input(id='searchInput', type='text', placeholder='Search...')
              div.input-group-append
                button.btn.btn-outline-success(type='submit') Search

          ul.navbar-nav.ml-auto
        
            li.nav-item
              a.nav-link(href='/discussion/') Challenges

    .container.content
      block content

    footer
      .row
        .col-12
          small &copy; Made by Ayan - 2023

    script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js', integrity='sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49', crossorigin='anonymous')
    script(src='/javascripts/bootstrap.min.js')
    script(src='/javascripts/validation.js')

script.
  function handleSearch() {
    var searchInput = document.getElementById("searchInput").value.toLowerCase();
    if (searchInput === "problem") {
      window.location.href = "/Problems/"; // Redirect to the Problems page
    } else if (searchInput === "features") {
      window.location.href = "/features/"; // Redirect to the Features page
    } else if (searchInput === "about") {
      window.location.href = "/about/"; // Redirect to the About page
    } else if (searchInput === "challenges") {
      window.location.href = "/challenfe/"; // Redirect to the Discussion page
    } else if (searchInput === "fibonacci") {
      window.location.href = "/problem1/"; // Redirect to the Fibonacci page
    } else if (searchInput === "fibonacci with recursion") {
      window.location.href = "/problem2/"; // Redirect to the Fibonacci with Recursion page
    } else if (searchInput === "tower of hanoi") {
      window.location.href = "/problem3/"; // Redirect to the Tower of Hanoi page
    } else if (searchInput === "articles") {
      window.location.href = "/index/"; // Redirect to the Index Page (assuming it's an article)
    } else {
      // Handle other search terms or provide a default action
      alert("No matching page found for your search term.");
    }
  }
