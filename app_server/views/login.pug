extends layout

block content
  .container
    .row
      .col-md-6.offset-md-3
        .d-flex.justify-content-center.align-items-center.min-vh-100
          .card.mt-4
            .card-header
              h3 Login
            .card-body
              form(action="/login", method="POST")
                .form-group
                  label(for="email") Email
                  input#email.form-control(type="email", name="email", required)
                .form-group
                  label(for="password") Password
                  input#password.form-control(type="password", name="password", required)
                button.btn.btn-primary.mt-3(type="submit") Log In
